.ArticleItem {
  flex-flow: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  width: 100%;

  a {
    color: #222;
    text-decoration: none;
  }

  h3 {
    margin: 0;
    font-weight: normal;
  }

  ul {
    color: rgba(0,0,0,0.5);
    list-style: none;
    padding: 0;
    margin: 5px 0 0;
    flex-flow: row;
    width: 100%;
  }

  li {
    padding: 0 10px 0 0;
    font-size: 13px;
    flex-grow: 1;
  }

  .score {
    flex-grow: 0;
    padding: 0;
  }

  .url {
    flex-grow: 2;
    text-align: right;
  }

  .author {
    margin-left: 10px;
    a {
      color: rgba(0,0,0,0.5) !important;
    }
  }

  .article--left {
    padding: 12px 12px 12px 0;
    flex-shrink: 1;
    width: 100%;
  }

  .ListItem--after {
    flex-grow: 1;
    width: 60px;
    margin: 0;
    z-index: 3;
    position: relative;

    a {
      flex-grow: 1;
      background: rgba(0,0,0,0.05);
      width: 100%;
      height: 100%;
      font-size: 22px;
    }

    span {
      margin: auto;
      color: #777;
    }
  }
}